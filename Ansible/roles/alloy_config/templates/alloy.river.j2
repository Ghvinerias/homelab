// !SECTION
{% endif %}

{% if custom_tools is defined and custom_tools | length > 0 %}
// SECTION: CUSTOM TOOLS LOGS

{% for tool in custom_tools %}
// {{ tool | upper }} logs configuration
local.file_match "{{ tool }}" {
  path_targets = [{
    __address__ = "localhost",
    __path__    = "/var/log/{{ tool }}/*.log",
    instance    = constants.hostname,
    job         = string.format("%s-{{ tool }}", constants.hostname),
    service     = "{{ tool }}",
  }]
}

loki.source.file "{{ tool }}" {
  targets    = local.file_match.{{ tool }}.targets
  forward_to = [loki.write.default.receiver]
}

{% endfor %}
// !SECTION
{% endif %}
